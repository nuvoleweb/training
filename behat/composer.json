{
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "composer/installers": "1.1.0",
    "drupal-composer/drupal-scaffold": "dev-master",
    "drush/drush": "~8.1",
    "drupal/core": "~8.1",
    "drupal/coffee": "8.1.0-beta1"
  },
  "require-dev": {
    "nuvoleweb/drupal-behat": "~1.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "NuvoleWeb\\Drupal\\Tests\\": "./scr/"
    }
  },
  "extra": {
    "installer-paths": {
      "build/core": [
        "type:drupal-core"
      ],
      "build/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "build/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "build/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "build/libraries/{$name}": [
        "type:drupal-library"
      ]
    }
  }
}
